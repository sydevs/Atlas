
- existing_provinces = @record.country.provinces.pluck(:province_code)
- provinces = ISO3166::Country[@record.country_code].subdivisions.map { |k,v| [v['name'] || v['translations']['it'], k] unless existing_provinces.include?(k) }.compact

.hint = translate('cms.hints.province.must_be_new')
= f.input :province_code, label: false, prompt: translate('cms.actions.target.choose', resource: translate('cms.hints.province.prompt')), collection: provinces, input_html: { class: 'search' }
