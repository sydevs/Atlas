
- existing_regions = @record.country.regions.pluck(:province_code)
- regions = ISO3166::Country[@record.country_code].subdivisions.map { |k,v| [v['name'] || v.dig('translations', I18n.locale.to_s), k] unless existing_regions.include?(k) }.compact

.hint = translate('cms.hints.region.must_be_new')
= f.input :province_code, label: false, prompt: translate('cms.actions.target.choose', resource: translate('cms.hints.region.prompt')), collection: regions, input_html: { class: 'search' }
