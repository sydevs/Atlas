<%= translate('mail.global_summary.intro') %>

<%= translate('mail.global_summary.registrations.title') %>
<%= '=' * translate('mail.global_summary.registrations.title').length %>
<%= translate('mail.global_summary.registrations.description', count: @recent_registrations.count) %>

<% if @new_events.present? %>
<%= translate('mail.global_summary.new_events.title') %>
<%= '=' * translate('mail.global_summary.new_events.title').length %>
<%= translate('mail.global_summary.new_events.description', count: @new_events.count) %>

<%= render partial: 'mailer/summaries/event', collection: @new_events.limit(10), locals: { timestamp: :created_at } %>
<% end %>
<% if @reviewable_events.present? %>
<%= translate('mail.global_summary.review.title') %>
<%= '=' * translate('mail.global_summary.review.title').length %>
<%= translate('mail.global_summary.review.description', count: @reviewable_events.count) %>

<%= render partial: 'mailer/summaries/event', collection: @reviewable_events.limit(10), locals: { timestamp: :expires_at } %>
<% end %>
<% if @expired_events.present? %>
<%= translate('mail.global_summary.expired.title') %>
<%= '=' * translate('mail.global_summary.expired.title').length %>
<%= translate('mail.global_summary.expired.description', count: @expired_events.count) %>

<%= render partial: 'mailer/summaries/event', collection: @expired_events.limit(10), locals: { timestamp: :expired_at } %>
<% end %>
<%= message translate('mail.common.about'), :text %>