<%= translate('mail.common.event.title') %>
<%= '=' * translate('mail.common.event.title').length %>
<%= translate('mail.common.event.name') %>:
 | <%= event.label %>
 | <%= event.description || translate('mail.common.event.no_description') %>

<%= translate('mail.common.event.type') %>:
 | <%= event.category_name %>
 | <%= event.category_description %>

<%= translate('mail.common.event.location') %>:
 | <%= [event.room, event.venue.name].compact.join(', ') %>
 | <%= event.venue.address %>
 | <%= translate('mail.common.event.latlng') %>: <%= event.venue.coordinates.join(', ') %>

<%= translate('mail.common.event.timing') %>:
 | <%= event.timing_in_words %>

<%= translate('mail.common.event.language') %>:
 | <%= event.language_name %>